<!doctype html>
<html lang="en">

  <% include ../partials/account %>

  <body class="text-center">
    <form class="form-signin" method="POST" action="/api/users/signup">

        <% if (errors.length > 0) { %>
    
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= errors %>
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                   <span aria-hidden="true">&times;</span>
                </button>
            </div>

        <% } %>

        <% if (error_msg) { %>
            <% for (let i = 0; i < errorValidate.length; i++) { %>

                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                
                    <%= errorValidate[i].message %>

                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

            <% } %>
        <% } %>

        <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
        
        <label for="inputName" class="sr-only">Name</label>
        <input type="text" id="inputName" class="form-control" placeholder="Name" name="name">

        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="text" id="inputEmail" class="form-control" placeholder="Email address" name="email">
        
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="text" id="inputPassword" class="form-control" placeholder="Password" name="password">

        <label for="inputRole" class="sr-only">Role</label>
        <input type="text" id="inputRole" class="form-control" placeholder="Role: (Batsman/Bowler/Allrounder)" name="role">

        <label for="inputBattingStyle" class="sr-only">Batting style</label>
        <input type="text" id="inputBattingStyle" class="form-control" placeholder="Batting style (lefty / Righty)" name="batting">

        <label for="inputBowlingStyle" class="sr-only">Bowling style</label>
        <input type="text" id="inputBowlingStyle" class="form-control" placeholder="Bowling style (lefty / Righty)" name="bowling">

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
        <p class="mt-5 mb-3 text-muted">&copy; 2017-2019</p>
    </form>
</body>
</html>